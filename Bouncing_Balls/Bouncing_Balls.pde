int[] x = {
  100, 150, 200, 250, 300, 250, 200, 150, 100, 500, 450, 400, 350, 300, 350, 400, 450, 500
};
int[] y = {
  100, 150, 200, 250, 300, 350, 400, 450, 500, 100, 150, 200, 250, 300, 350, 400, 450, 500
};
int sz = 25;
int speedX[] = {
  4, 4, 4, 4, 4, -4, -4, -4, -4, -4, -4, -4, -4, -4, 4, 4, 4, 4
};

void setup () {
  size (600, 800);
  fill (255, 0, 0);
  stroke (255);
}

void draw () {
  background (0);
  for (int i=0; i<x.length; i++) {
    x[i]+=speedX[i];
    ellipse (x[i], y[i], sz, sz);
    if (x[i]+sz/2>width || x[i]-sz/2<0) {
      speedX[i]=-speedX[i];
    }
  }
  line (x[0], y[0], x[9], y[9]);
  line (x[1], y[1], x[10], y[10]);
  line (x[2], y[2], x[11], y[11]);
  line (x[3], y[3], x[12], y[12]);
  line (x[4], y[4], x[13], y[13]);
  line (x[5], y[5], x[14], y[14]);
  line (x[6], y[6], x[15], y[15]);
  line (x[7], y[7], x[16], y[16]);
  line (x[8], y[8], x[17], y[17]);
}

